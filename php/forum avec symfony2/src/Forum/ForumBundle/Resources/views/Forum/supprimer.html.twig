{# src/Forum/ForumBundle/Resources/views/Forum/supprimer.html.twig #}

{% extends "ForumForumBundle::layout.html.twig" %}

{% block title %}
  Supprimer un sujet - {{ parent() }}
{% endblock %}

{% block forum_body %}

  <h2>Supprimer un sujet</h2>

  <p>
    Etes-vous certain de vouloir supprimer l'sujet "{{ article.titre }}" ?
  </p>

  {# On met l'id de l'article dans la route de l'action du formulaire #}
  <form action="{{ path('forum_supprimer', {'id': article.id}) }}" method="post">
    <a href="{{ path('forum_voir', {'id': article.id}) }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour au sujet
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>

{% endblock %}